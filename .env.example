# SearXNG-Cool Environment Configuration
# Copy this file to .env and update with your actual values

# === SECURITY SETTINGS ===
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_NEW_SECRET
JWT_SECRET_KEY=CHANGE_ME_GENERATE_NEW_SECRET
SECURITY_PASSWORD_SALT=CHANGE_ME_GENERATE_NEW_SALT

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://searxng_user:CHANGE_ME@localhost/searxng_cool_music
DB_USER=searxng_user
DB_PASSWORD=CHANGE_ME
DB_HOST=localhost
DB_PORT=5432
DB_NAME=searxng_cool_music

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# === NEO4J CONFIGURATION ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME

# === FLASK CONFIGURATION ===
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=False
LOG_LEVEL=INFO

# === ORCHESTRATOR SETTINGS ===
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=7775
ORCHESTRATOR_WORKERS=4

# === SEARXNG SETTINGS ===
SEARXNG_HOST=127.0.0.1
SEARXNG_PORT=8888
SEARXNG_SECRET=CHANGE_ME_GENERATE_NEW_SECRET

# === MUSIC API KEYS (Optional) ===
# Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Genius
GENIUS_API_KEY=

# Last.fm
LASTFM_API_KEY=
LASTFM_SHARED_SECRET=

# MusicBrainz
MUSICBRAINZ_USER_AGENT=SearXNG-Cool/2.0

# === SECURITY HEADERS ===
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=600

# === JWT SETTINGS ===
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days
JWT_COOKIE_SECURE=True
JWT_CSRF_IN_COOKIES=True

# === CORS SETTINGS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# === RATE LIMITING ===
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=200 per day, 50 per hour

# === SSL/TLS ===
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# === MONITORING ===
SENTRY_DSN=
PROMETHEUS_ENABLED=False

# === DEPLOYMENT ===
DEPLOYMENT_ENV=development
SERVER_NAME=localhost
PREFERRED_URL_SCHEME=https