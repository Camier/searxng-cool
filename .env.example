# SearXNG-Cool Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Flask Configuration
FLASK_APP=orchestrator.app:create_app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-here-generate-with-openssl-rand-hex-32
SECURITY_PASSWORD_SALT=your-salt-here-generate-with-openssl-rand-hex-16

# Database Configuration
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://searxng_user:${DB_PASSWORD}@localhost/searxng_cool_music

# Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
SOCKETIO_REDIS_URL=redis://localhost:6379/1
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/2

# Neo4j Configuration (if using knowledge graph features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# SearXNG Core Configuration
SEARXNG_CORE_URL=http://localhost:8888
SEARXNG_SETTINGS_PATH=/home/mik/SEARXNG/searxng-cool-restored/config/searxng-settings.yml
SEARXNG_SECRET=your-searxng-secret-here-generate-with-openssl-rand-hex-32

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8889
DEBUG=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8095

# JWT Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=86400

# Music Service API Keys (Optional - for enhanced features)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
GENIUS_API_KEY=
LASTFM_API_KEY=
LASTFM_API_SECRET=
DISCOGS_TOKEN=
DISCOGS_USER_AGENT=SearXNG-Cool/1.0
MUSICBRAINZ_USER_AGENT=SearXNG-Cool/1.0
SOUNDCLOUD_CLIENT_ID=
YOUTUBE_API_KEY=
APPLE_MUSIC_TOKEN=
TIDAL_CLIENT_ID=
TIDAL_CLIENT_SECRET=

# Feature Toggles
ENABLE_MUSIC_SEARCH=true
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/searxng-cool/orchestrator.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Rate Limiting
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_PER_IP=200 per hour

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CONTENT_TYPE_NOSNIFF=true
SECURITY_BROWSER_XSS_FILTER=true
SECURITY_X_FRAME_OPTIONS=DENY

# Production Settings
PROPAGATE_EXCEPTIONS=false
TRAP_HTTP_EXCEPTIONS=false